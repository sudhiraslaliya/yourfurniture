@model Product

<div>
    <h2>@Model.Name</h2>
    <p>@Model.Description</p>
    <p>Price: @Model.Price</p>
    <form asp-action="AddToCart" asp-controller="ShoppingCart">
        <input type="hidden" name="productId" value="@Model.Id" />
        <button type="submit">Add to Cart</button>
    </form>
</div>
